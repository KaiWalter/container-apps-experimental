{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerappName": {
            "defaultValue": "app1",
            "type": "string"
        },
        "componentName": {
            "defaultValue": "statestore",
            "type": "string"
        },
        "location": {
            "defaultValue": "westeurope",
            "type": "string"
        },
        "environmentName": {
            "defaultValue": "ca-kw",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2022-01-01-preview",
            "type": "Microsoft.App/managedEnvironments/daprComponents",
            "name": "[concat(parameters('environmentName'),'/',parameters('componentName'))]",
            "location": "[parameters('location')]",
            "properties": {
                "componentType": "state.azure.blobstorage",
                "version": "v1",
                "metadata": []
            }
        },
        {
            "apiVersion": "2022-01-01-preview",
            "type": "Microsoft.App/containerApps",
            "name": "[parameters('containerappName')]",
            "location": "[parameters('location')]",
            "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]",
                "configuration": {
                    "secrets": [
                        {
                            "name": "mysecret",
                            "value": "thisismysecret"
                        }
                    ],
                    "ingress": {
                        "external": true,
                        "targetPort": 80,
                        "allowInsecure": false,
                        "traffic": [
                            {
                                "latestRevision": true,
                                "weight": 100
                            }
                        ]
                    },
                    "dapr": {
                        "enabled": true,
                        "appId": "app1",
                        "appPort": 80,
                        "appProtocol": "http"
                    }
                },
                "template": {
                    "revisionSuffix": "myrevision",
                    "containers": [
                        {
                            "name": "nginx",
                            "image": "nginx",
                            "env": [
                                {
                                    "name": "HTTP_PORT",
                                    "value": "80"
                                },
                                {
                                    "name": "SECRET_VAL",
                                    "secretRef": "mysecret"
                                }
                            ],
                            "resources": {
                                "cpu": 0.5,
                                "memory": "1Gi"
                            }
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 3
                    }
                }
            }
        }
    ]
}